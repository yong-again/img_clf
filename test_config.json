{
    "name": "custom_convnext_augmix",
    "n_gpu": 1,

    "arch": {
        "type": "CustomConvNextClassifier",
        "args": {
            "head_layers": [ 
                {"type": "LayerNorm", "args": {"normalized_shape": 1024}},
                {"type": "Linear", "args": {"in_features": 1024, "out_features": 512}},
                {"type": "GELU"},
                {"type": "Dropout", "args": {"p": 0.3}},
                {"type": "Linear", "args": {"in_features": 512, "out_features": 396}}
            ]
    }
    },
    "data_loader": {
        "type": "CarTestDataLoader",
        "args":{
            "data_dir": "data",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 8,
            "csv_file" : "test.csv",
            "return_onehot": true
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "CrossEntropy",
        "args": {
            "use_weight": true
        }
    },

    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
