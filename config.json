{
    "name": "custom_convnext_cutmix_noise_filter",
    "n_gpu": 1,
    "arch": {
        "type": "CustomConvNextClassifier",
        "args": {
            "head_layers": [ 
                {"type": "LayerNorm", "args": {"normalized_shape": 1024}},
                {"type": "Linear", "args": {"in_features": 1024, "out_features": 512}},
                {"type": "GELU"},
                {"type": "Dropout", "args": {"p": 0.3}},
                {"type": "Linear", "args": {"in_features": 512, "out_features": 396}}
            ]
        }
    },
    "data_loader": {
        "type": "OnlyCutMixDataLoader",
        "args":{
            "data_dir": "data",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 12,
            "csv_file" : "train_mapped_3.csv",
            "return_onehot": false
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "FocalLoss",
        "args": {
            "alpha": 0.75,
            "gamma": 1.5,
            "reduction": "mean"
        }
    },

    "metrics": [
        "accuracy", "top_k_acc", "f1_score"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingWarmRestarts",
        "args": {
            "T_0": 50,
            "T_mult": 2,
            "eta_min": 1e-6
        }
    },
    "trainer": {
        "epochs": 300,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
