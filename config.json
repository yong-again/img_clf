{
    "name": "Car_Classification",
    "n_gpu": 1,

    "arch": {
        "type": "ResNetclassifier",
        "args": {
        }
    },
    "data_loader": {
        "type": "CarAugImageDataLoader",
        "args":{
            "data_dir": "data",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 8,
            "csv_file" : "train_mapped_2.csv",
            "return_onehot": false
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "CrossEntropy",
        "args": {
            "use_weight" : true
        }
    },

    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
